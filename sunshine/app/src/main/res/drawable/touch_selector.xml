<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The state, being pressed, but not activated, (finger down)-->
    <item android:state_pressed="true" android:drawable="@color/grey"/>

    <!-- The state, being activated-->
    <item android:state_activated="true" android:drawable="@color/sunshine_light_blue"/>

    <!-- The default drawable-->
    <item android:drawable="@android:color/transparent"/>

</selector>